<?xml version="1.0" encoding="UTF-8"?>
<feed xml:lang="en-US" xmlns="http://www.w3.org/2005/Atom" xmlns:thr="http://purl.org/syndication/thread/1.0" xmlns:georss="http://www.georss.org/georss" xmlns:activity="http://activitystrea.ms/spec/1.0/" xmlns:media="http://purl.org/syndication/atommedia" xmlns:poco="http://portablecontacts.net/spec/1.0" xmlns:ostatus="http://ostatus.org/schema/1.0" xmlns:statusnet="http://status.net/schema/api/1/">
<generator uri="{{ pod_url }}">Oden</generator>
<id>{{ pod_url }}public/{{ user }}.atom</id>
<title>{{ full_name }}'s Public Feed</title>
<subtitle>Posts from Oden</subtitle>
<updated>{{ time_now }}</updated>
<author>
  <name>{{ full_name }}</name>
  <uri>{{ pod_url }}public/{{ user }}</uri>
</author>
<link href="https://pubsubhubbub.appspot.com/" rel="hub"/>
<link href="{{ pod_url }}public/{{ user }}.atom" rel="self" type="application/atom+xml"/>
<activity:subject>
  <activity:object-type>http://activitystrea.ms/schema/1.0/person</activity:object-type>
  <id>{{ pod_url }}public/{{ user }}</id>
  <title>{{ full_name }}</title>
  <link rel="alternative" type="text/html" href="{{ pod_url }}public/{{ user }}"/>
  <link rel="avatar" type="image/jpeg" media:width="100" media:height="100" href="{{ image_url }}"/>
</activity:subject>
</feed>
